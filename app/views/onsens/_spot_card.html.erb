<%# 温泉スポットカード（Atomic Design: Molecule） %>
<%= link_to onsen_path(onsen), id: "onsen-card-#{onsen.id}", class: "block bg-white rounded-lg shadow-md hover:shadow-lg p-4 hover:bg-blue-50 transition-all duration-200 cursor-pointer border border-gray-100 focus:outline focus:ring-2 focus:ring-blue-400", 'aria-label': "#{onsen.name}の詳細" do %>
  <div class="flex items-start gap-4">
    <% if onsen.images.attached? %>
      <%= image_tag onsen.images.first, class: "w-20 h-20 object-cover rounded-lg flex-shrink-0", alt: onsen.name %>
      <h2 class="text-lg font-semibold mb-2 truncate <%= 'text-yellow-600 font-bold' if user_signed_in? && current_user.favorites.exists?(onsen_id: onsen.id) %>">
  <%= onsen.name %>
</h2>


    <% else %>
      <div class="w-20 h-20 bg-gray-200 rounded-lg flex items-center justify-center text-gray-400 flex-shrink-0 text-xs">No Image</div>
    <% end %>
    <div class="flex-1 min-w-0">
      <h2 class="text-lg font-semibold mb-2 text-gray-900 truncate"><%= onsen.name %></h2>
      <div class="text-sm text-gray-600 mb-2 line-clamp-2"><%= truncate(onsen.description, length: 60) %></div>
      <% if onsen.tags.present? %>
        <div class="text-xs text-gray-500 mb-2">
          <span class="font-medium">タグ:</span> <%= onsen.tags %>
        </div>
      <% end %>
      <% if user_signed_in? && current_user.favorites.exists?(onsen_id: onsen.id) %>
  <div class="text-yellow-500 text-xl mb-1">★ お気に入り</div>
<% end %>
      <div class="text-sm text-gray-700 mb-1">
  <strong>営業時間:</strong>
  <%= onsen.open_hours.present? ? onsen.open_hours.strftime("%H:%M") : "未登録" %>
</div>
<div class="text-sm text-gray-700 mb-1">
  <strong>終業時間:</strong>
  <%= onsen.open_hours.present? ? onsen.close_hours.strftime("%H:%M") : "未登録" %>
</div>
      <div class="text-sm text-gray-700 mb-2">
  <strong>料金:</strong> <%= onsen.fee.present? ? number_to_currency(onsen.fee, unit: "¥", precision: 0) : "未登録" %>
</div>
      <div class="flex items-center">
        <% if onsen.reviews.any? %>
          <%= render partial: "shared/rating_stars", locals: { rating: (onsen.reviews.average(:rating)&.round || 0) } %>
          <span class="text-xs text-gray-500 ml-2">(<%= onsen.reviews.count %>件)</span>
        <% else %>
          <span class="text-xs text-gray-400">未評価</span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
